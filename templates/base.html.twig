                {% if app.user %}Bonjour {{ app.user.firstName }}, n{% else %}N{% endif %}ous sommes
                le {{ "now" | date('d/m/Y') }}
            </div>
            <nav class="navbar navbar-expand-md">
                {% if(app.user) %}
                    <a href="{{ path('home') }}" title="Accueil">Accueil</a>
                    <a href="{{ path('user_update') }}" title="Mon profil">Mon profil</a>
                    <a href="{{ path('event_add') }}" title="Add Event">Ajouter une sortie</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('create_user') }}" title="Add">Ajouter un membre</a>
                    {% endif %}
                    <a href="{{ path('app_logout') }}" title="Disconnect">Se déconnecter</a>
                {% endif %}
            </nav>
        </div>
#}
    </header>

    {# pass an array argument to get the messages of those types  #}
    <div class="container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    <main class="container">
        <div>
            {% block main %}Test{% endblock %}
        </div>
    </main>
    <footer class="container d-flex justify-content-center">
        <p class="d-flex align-self-center">&copy; {{ "now"|date("Y") }} Sortir.com</p>

    </footer>
</div>
<script
        src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
{% block javascripts %}
{% endblock %}
</body>
</html>

